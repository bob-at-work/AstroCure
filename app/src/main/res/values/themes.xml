<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.AstroCure" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!--        <item name="colorPrimary">@null</item>-->
        <!--        <item name="android:itemBackground">#ffffff</item>-->
        <!--        <item name="android:textColor">#000000</item>-->
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <!--        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>-->
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>

    </style>

    <style name="Theme.AstroCure" parent="Base.Theme.AstroCure">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize5Percent" parent="">
        <item name="cornerSize">5%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize20Percent" parent="">
        <item name="cornerSize">20%</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TabTextSize" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="App.BottomNav.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>

    <style name="HeadingButtonNeumorphismShapeAppearance">
        <!--        <item name="neumorph_cornerFamily">{rounded|oval}</item>-->
        <item name="neumorph_cornerSize">10dp</item>

        <!-- Or if wants different radii depending on the corner. -->
        <!--        <item name="neumorph_cornerSizeTopLeft">16dp</item>-->
        <!--        <item name="neumorph_cornerSizeTopRight">16dp</item>-->
        <!--        <item name="neumorph_cornerSizeBottomLeft">16dp</item>-->
        <!--        <item name="neumorph_cornerSizeBottomRight">16dp</item>-->
    </style>

    <style name="VideoCardNeumorphismShapeAppearance">
        <item name="neumorph_cornerSize">40dp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FF9500</item>
    </style>

    <style name="RatingBarHistory" parent="Theme.AppCompat">
        <item name="colorControlNormal">#48463C</item>
        <item name="colorControlActivated">#F8D149</item>
    </style>

    <style name="RatingBarCEO" parent="Theme.AppCompat">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFD029</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TabTextAppearanceCamel" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="neumorph_plan_dialog">
        <item name="neumorph_cornerSize">5dp</item>
    </style>

</resources>