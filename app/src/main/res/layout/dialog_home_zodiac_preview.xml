<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/card_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".65"
        app:layout_constraintWidth_percent=".9"
        app:neumorph_shadowColorDark="#66FFFFFF"
        app:neumorph_shadowColorLight="#33FFFFFF"
        app:neumorph_strokeColor="@color/white"
        app:neumorph_strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/content_box_bg">

            <TextView
                android:id="@+id/zodiac_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:text="Cancer"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOROSCOPE FOR TODAY"
                android:textColor="#CCC7C7"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/zodiac_name" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="29 Aug 2023"
                android:textColor="#CFEE0D"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView31" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fadeScrollbars="false"
                android:scrollbarSize="10dp"
                android:scrollbarTrackVertical="@drawable/bg_help_chat_user"
                android:scrollbars="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_max="350dp"
                app:layout_constraintTop_toBottomOf="@id/date">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/love"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:text="Most likely this is a day when your diplomatic abilities aro put to test. Your Aries horoscope for this day, in regards to our love life looks complicated to say the least, patience and perseverance is needed."
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/career"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:text="Most likely this is a day when your diplomatic abilities aro put to test. Your Aries horoscope for this day, in regards to our love life looks complicated to say the least, patience and perseverance is needed."
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/business"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:text="Most likely this is a day when your diplomatic abilities aro put to test. Your Aries horoscope for this day, in regards to our love life looks complicated to say the least, patience and perseverance is needed."
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/health"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="@string/dummy_1"
                        android:textColor="@color/white" />

                </LinearLayout>


            </ScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </soup.neumorphism.NeumorphCardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="-45dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/card_data"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="@+id/card_data"
        app:layout_constraintStart_toStartOf="@+id/card_data"
        app:layout_constraintWidth_percent=".25">

        <androidx.cardview.widget.CardView
            android:id="@+id/image_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/zodiac_logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#040F2D"
                    android:padding="10dp"
                    android:src="@drawable/aries_top" />

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>