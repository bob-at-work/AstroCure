<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_therapy_bg"
    tools:context=".ui.games.ColorTherapyActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/ic_back_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/color_therapy"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_marginTop="-10dp"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose any color, and get your readings in few seconds"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"/>

    <ImageView
        android:id="@+id/red"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:src="@drawable/red"
        android:background="@color/btn_inactive"
        app:layout_constraintBottom_toTopOf="@id/brown"
        app:layout_constraintTop_toBottomOf="@id/label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/white"/>

    <ImageView
        android:id="@+id/white"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/white"
        app:layout_constraintBottom_toBottomOf="@+id/red"
        app:layout_constraintEnd_toStartOf="@id/yellow"
        app:layout_constraintStart_toEndOf="@id/red"
        app:layout_constraintTop_toTopOf="@id/red" />

    <ImageView
        android:id="@+id/yellow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/yellow"
        app:layout_constraintBottom_toBottomOf="@+id/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/white"
        app:layout_constraintTop_toTopOf="@id/red" />

    <ImageView
        android:id="@+id/brown"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:src="@drawable/brown"
        app:layout_constraintBottom_toTopOf="@id/gray"
        app:layout_constraintTop_toBottomOf="@id/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/purple"/>

    <ImageView
        android:id="@+id/purple"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/purple"
        app:layout_constraintBottom_toBottomOf="@+id/brown"
        app:layout_constraintEnd_toStartOf="@id/pink"
        app:layout_constraintStart_toEndOf="@id/brown"
        app:layout_constraintTop_toTopOf="@id/brown" />

    <ImageView
        android:id="@+id/pink"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/pink"
        app:layout_constraintBottom_toBottomOf="@+id/brown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/purple"
        app:layout_constraintTop_toTopOf="@id/brown" />

    <ImageView
        android:id="@+id/gray"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:src="@drawable/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/brown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/black"/>

    <ImageView
        android:id="@+id/black"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/black"
        app:layout_constraintBottom_toBottomOf="@+id/gray"
        app:layout_constraintEnd_toStartOf="@id/green"
        app:layout_constraintStart_toEndOf="@id/gray"
        app:layout_constraintTop_toTopOf="@id/gray" />

    <ImageView
        android:id="@+id/green"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/green"
        app:layout_constraintBottom_toBottomOf="@+id/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/black"
        app:layout_constraintTop_toTopOf="@id/gray" />
</androidx.constraintlayout.widget.ConstraintLayout>