<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/feeds_bg"
    tools:context=".ui.fragments.HomeFeedFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/feeds"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Feeds"
        app:cornerRadius="10dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/white"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintWidth_percent=".4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/question_answer"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/question_answer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Q&amp;A"
        app:cornerRadius="10dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/white"
        android:textColor="@color/white"
        app:backgroundTint="#5C8336B0"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintWidth_percent=".4"
        app:layout_constraintStart_toEndOf="@id/feeds"
        app:layout_constraintTop_toTopOf="@id/feeds"
        app:layout_constraintEnd_toEndOf="parent"/>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/feeds"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>