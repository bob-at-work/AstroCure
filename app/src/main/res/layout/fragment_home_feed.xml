<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_2"
    tools:context=".ui.fragments.HomeFeedFragment">

    <soup.neumorphism.NeumorphButton
        android:id="@+id/feeds"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="Feeds"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:gravity="center"
        app:neumorph_strokeColor="@color/white"
        app:neumorph_strokeWidth=".1dp"
        app:neumorph_shadowColorDark="#80FFFFFF"
        app:neumorph_shadowColorLight="#1AFFFFFF"
        app:neumorph_shapeAppearance="@style/HeadingButtonNeumorphismShapeAppearance"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/question_answer"/>

    <soup.neumorphism.NeumorphButton
        android:id="@+id/question_answer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="Q&amp;A"
        android:textColor="@color/white"
        app:backgroundTint="#5C8336B0"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:gravity="center"
        app:neumorph_strokeColor="@color/white"
        app:neumorph_strokeWidth=".1dp"
        app:neumorph_shadowColorDark="#80FFFFFF"
        app:neumorph_shadowColorLight="#1AFFFFFF"
        app:neumorph_shapeAppearance="@style/HeadingButtonNeumorphismShapeAppearance"
        app:layout_constraintStart_toEndOf="@id/feeds"
        app:layout_constraintTop_toTopOf="@id/feeds"
        app:layout_constraintEnd_toEndOf="parent"/>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/feeds"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>