<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepage"
    tools:context=".ui.FeedsActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/feeds"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Feeds"
        app:cornerRadius="10dp"
        app:strokeWidth=".05dp"
        app:strokeColor="@color/white"
        android:textColor="@color/black"
        app:layout_constraintWidth_percent=".4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/question_answer"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/question_answer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Q&amp;A"
        app:cornerRadius="10dp"
        app:strokeWidth=".05dp"
        app:strokeColor="@color/white"
        android:textColor="@color/white"
        app:backgroundTint="@android:color/transparent"
        app:layout_constraintWidth_percent=".4"
        app:layout_constraintStart_toEndOf="@id/feeds"
        app:layout_constraintTop_toTopOf="@id/feeds"
        app:layout_constraintEnd_toEndOf="parent"/>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/feeds"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!--<com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:fabSize="mini"
        app:backgroundTint="#7015A8"
        android:src="@drawable/baseline_add"
        app:shapeAppearance="?attr/shapeAppearance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>-->

</androidx.constraintlayout.widget.ConstraintLayout>