<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/feed_unselected_bg"
    android:minHeight="90dp"
    android:padding="20dp">
    <!--    android:background="@drawable/feed_unselected_bg"-->
    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to create a account?"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/expand"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_round_add"
        app:layout_constraintBottom_toBottomOf="@id/question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/question" />

    <TextView
        android:id="@+id/answers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open the Astro app to get started and follow the steps. Astro App doesnâ€™t charge a fee to check daily horoscope."
        android:textColor="#CAC3C3"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/question" />

</androidx.constraintlayout.widget.ConstraintLayout>